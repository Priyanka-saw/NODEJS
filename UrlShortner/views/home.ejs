<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
        }
    </style>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home page</title>
</head>

<body>
    <h1>URL Shortener</h1>

    <% if (locals.shortId) { %>
        <p>URL Generated: http://localhost:8001/<%= shortId %></p>
    <% } %>   

    <div>
        <form action="/url" method="post">
            <label for="">Enter your Original URL</label>
            <input type="text" name="url" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
               <thead>
                   
                        <th>S. No.</th>
                       <th>Short URL</th>
                       <th>Original URL</th>
                       <th>Visit Count</th>
                
               </thead>
               <tbody>
                   <% urls.forEach((url, index) => { %>
                       <tr>
                           <td><%= index + 1 %></td>
                           <td><a href="http://localhost:8001/<%= url.shortId %>">http://localhost:8001/<%= url.shortId %></a></td>
                           <td><%= url.redirectUrl %></td>
                           <td><%= url.visitHistory.length %></td>
                       </tr>
                   <% }) %>
               </tbody>
            </table>
         
        <% } %>
    </div>
</body>

</html>
